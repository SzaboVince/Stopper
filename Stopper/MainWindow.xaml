<Window x:Class="Stopper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stopper"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="3*"/>
			</Grid.ColumnDefinitions>
			<Button Click="startbtn_Click" x:Name="start" Content="Start" HorizontalAlignment="center" VerticalAlignment="Top" FontSize="20" Width="100" Margin="0,60"/>
			<Button Click="resetbtn_Click" x:Name="reset" Content="Reset" HorizontalAlignment="center" VerticalAlignment="Top" FontSize="20" Width="100" Margin="0,130,0,0"/>
			<TextBlock Text="00:00.00" x:Name="ora" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="70"/>
		</Grid>
		<ListBox Grid.Row="1" HorizontalContentAlignment="Center" x:Name="reszido"/>

	</Grid>
</Window>
